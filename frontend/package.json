{
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.3"
  },
  "scripts": {
    "dev": "concurrently \"npm run build\" \"npm run start-server\"",
    "build": "npm run build-tailwind",
    "start-server": "miniserve . --index src/index.html",
    "build-tailwind": "npx tailwindcss -i ./src/index.css -o ../backend/wwwroot/tailwind/index.css --minify",
    "watch-tailwind": "npx tailwindcss -i ./src/index.css -o ../backend/wwwroot/tailwind/index.css --minify --watch"
  }
}
